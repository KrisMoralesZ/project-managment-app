%h2 Sign up
#form
  = form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f|
    = render "organizations/shared/error_messages", resource: resource
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email"
    .field
      = f.label :organization_name
      %br/
      = f.text_field :organization_name, autofocus: true, autocomplete: "organization_name"
    .field
      = f.label :subdomain
      %br/
      = f.text_field :subdomain, autofocus: true, autocomplete: "subdomain"
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password"
    .actions
      = f.submit "Sign up"
= render "organizations/shared/links"
